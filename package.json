{
    "name": "rulesync-ts",
    "version": "1.1.1",
    "description": "Easily sync all of your favorite AI assistant instruction files - TypeScript version",
    "main": "dist/index.js",
    "bin": {
        "rulesync": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "prepare": "npm run build",
        "version": "npm run build && npm test"
    },
    "keywords": [
        "ai",
        "assistant",
        "rules",
        "synchronization",
        "claude",
        "gemini",
        "cursor",
        "windsurf",
        "github-copilot",
        "cli"
    ],
    "author": "Rewritten in TypeScript",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dmccown1500/rulesync-ts.git"
    },
    "bugs": {
        "url": "https://github.com/dmccown1500/rulesync-ts/issues"
    },
    "homepage": "https://github.com/dmccown1500/rulesync-ts#readme",
    "dependencies": {
        "axios": "^1.10.0",
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "fs-extra": "^11.3.0",
        "inquirer": "^8.2.6"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^8.2.10",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist/**/*",
        "templates/**/*",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "publishConfig": {
        "access": "public"
    }
}
